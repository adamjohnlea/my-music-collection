{% extends 'base.html.twig' %}

{% block title %}Setup - My Music Collection{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Welcome to My Music Collection</h3>
                </div>
                <div class="card-body">
                    <p>To get started, please enter your Discogs credentials. You can find or create your Personal Access Token in your <a href="https://www.discogs.com/settings/developers" target="_blank">Discogs Developer Settings</a>.</p>
                    
                    {% if error %}
                        <div class="alert alert-danger">
                            {{ error }}
                        </div>
                    {% endif %}

                    <form method="POST" action="/setup/save">
                        <div class="mb-3">
                            <label for="username" class="form-label">Discogs Username</label>
                            <input type="text" name="username" id="username" class="form-control" required placeholder="e.g. music_lover_99">
                        </div>
                        <div class="mb-3">
                            <label for="token" class="form-label">Discogs Personal Access Token</label>
                            <input type="password" name="token" id="token" class="form-control" required placeholder="Paste your token here">
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">Save and Finish Setup</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-muted small">
                    Note: This will create a <code>.env</code> file in your application root.
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
