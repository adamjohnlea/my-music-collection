{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block styles %}
  <style>
    :root { --bg:#0b0b0c; --card:#16171a; --text:#e7e7ea; --muted:#a0a3aa; --accent:#67e8f9; --overlay: rgba(0,0,0,.9); }
    html,body{margin:0;padding:0;background:var(--bg);color:var(--text);font:16px/1.5 system-ui, -apple-system, Segoe UI, Roboto, Inter, sans-serif}
    .wrap{max-width:1000px;margin:40px auto;padding:0 20px}
    a{color:var(--accent);text-decoration:none}
    a:hover{text-decoration:underline}
    .layout{display:grid;grid-template-columns:280px 1fr;gap:24px}
    .card{background:var(--card);border-radius:12px;overflow:hidden}
    .cover{width:100%;aspect-ratio:1/1;object-fit:cover;background:#222;cursor:zoom-in}
    .meta{padding:16px}
    .muted{color:var(--muted)}
    h1{margin:0 0 8px 0;font-size:1.6rem}

    /* Lightbox */
    .lightbox{position:fixed;inset:0;display:none;align-items:center;justify-content:center;background:var(--overlay);z-index:1000}
    .lightbox.open{display:flex}
    .lb-inner{position:relative;max-width:95vw;max-height:95vh;display:flex;align-items:center;justify-content:center}
    .lb-img{max-width:95vw;max-height:95vh;object-fit:contain;box-shadow:0 10px 30px rgba(0,0,0,.6)}
    .lb-close{position:absolute;top:12px;right:12px;background:rgba(0,0,0,.6);color:#fff;border:0;border-radius:999px;width:40px;height:40px;cursor:pointer;font-size:20px}
    .lb-nav{position:absolute;top:50%;transform:translateY(-50%);display:flex;align-items:center;justify-content:center}
    .lb-prev,.lb-next{position:absolute;top:50%;transform:translateY(-50%);background:rgba(0,0,0,.6);color:#fff;border:0;border-radius:999px;width:44px;height:44px;cursor:pointer;font-size:20px}
    .lb-prev{left:-60px}
    .lb-next{right:-60px}
    .lb-counter{position:absolute;bottom:10px;left:50%;transform:translateX(-50%);color:#fff;background:rgba(0,0,0,.5);padding:4px 10px;border-radius:999px;font-size:.9rem}

    @media (max-width: 800px){
      .layout{grid-template-columns:1fr}
      .lb-prev{left:10px}
      .lb-next{right:10px}
    }
  </style>
{% endblock %}

{% block content %}
  <div class="wrap">
    <div style="display:flex;justify-content:space-between;align-items:center;margin-bottom:24px">
      <p style="margin:0"><a href="{{ back_url|default('/') }}" style="background:var(--card);border:1px solid #2a2b2f;padding:6px 12px;border-radius:8px;color:var(--text);font-size:.9rem;text-decoration:none">← Back</a></p>
      <nav style="display:flex;gap:12px;align-items:center">
        <a href="/random" class="muted" style="font-size:.9rem">Surprise Me</a>
        <a href="/stats" class="muted" style="font-size:.9rem">Stats</a>
        <a href="/about" class="muted" style="font-size:.9rem">About</a>
      </nav>
    </div>
    {% if release %}
      <div class="layout">
        <div>
          <div class="card">
            {% if image_url %}
              <img id="main-cover" class="cover" src="{{ image_url }}" alt="{{ release.title }} cover" data-idx="{% set currentIdx = 0 %}{% for img in images %}{% if img.url == image_url %}{% set currentIdx = loop.index0 %}{% endif %}{% endfor %}{{ currentIdx }}" />
            {% else %}
              <div class="cover"></div>
            {% endif %}
          </div>
          {% if images is defined and images|length > 0 %}
            <div class="thumbs" style="display:flex;gap:8px;flex-wrap:wrap;margin-top:8px;">
              {% for img in images %}
                <button class="thumb" data-url="{{ img.url }}" data-idx="{{ loop.index0 }}" title="Image {{ loop.index }}" style="border:0;background:transparent;padding:0;cursor:pointer">
                  <img src="{{ img.url }}" alt="thumb {{ loop.index }}" style="width:56px;height:56px;object-fit:cover;border-radius:8px;border:1px solid #2a2b2f;opacity:{% if img.is_primary %}1{% else %}.85{% endif %}" />
                </button>
              {% endfor %}
            </div>
          {% endif %}
        </div>
        <div>
          <h1>{{ release.title }}</h1>
          <p class="muted">{{ release.artist|strip_discogs_suffix }}{% if release.year %} • {{ release.year }}{% endif %}</p>
          {% if release.country %}<p class="muted">{{ release.country }}</p>{% endif %}

          {% if details.genres or details.styles %}
            <p style="margin:8px 0;">
              {% for g in details.genres %}<span class="muted" style="border:1px solid #2a2b2f;border-radius:12px;padding:2px 8px;margin-right:6px;display:inline-block">{{ g }}</span>{% endfor %}
              {% for s in details.styles %}<span class="muted" style="border:1px solid #2a2b2f;border-radius:12px;padding:2px 8px;margin-right:6px;display:inline-block">{{ s }}</span>{% endfor %}
            </p>
          {% endif %}

          {% if details.formats %}
            <p class="muted">Formats:
              {% for f in details.formats %}
                {{ f.name }}{% if f.text %} ({{ f.text }}){% endif %}{% if not loop.last %}, {% endif %}
              {% endfor %}
            </p>
          {% endif %}

          {% if details.labels %}
            <p class="muted">Labels:
              {% for l in details.labels %}{{ l.name|strip_discogs_suffix }}{% if l.catno %} ({{ l.catno }}){% endif %}{% if not loop.last %}, {% endif %}{% endfor %}
            </p>
          {% endif %}

          {% if details.tracklist %}
            <div class="card" style="margin-top:16px;">
              <div class="meta"><strong>Tracklist</strong>
                <ol>
                  {% for t in details.tracklist %}
                    <li>{{ t.position }} — {{ t.title }}{% if t.duration %} <span class="muted">({{ t.duration }})</span>{% endif %}</li>
                  {% endfor %}
                </ol>
              </div>
            </div>
          {% endif %}

          {% if details.videos %}
            <div class="card" style="margin-top:16px;">
              <div class="meta"><strong>Videos</strong>
                <ul>
                  {% for v in details.videos %}
                    <li><a href="{{ v.uri }}" target="_blank" rel="noopener">{{ v.title }}</a></li>
                  {% endfor %}
                </ul>
              </div>
            </div>
          {% endif %}

          {% if details.notes %}
            <div class="card" style="margin-top:16px;">
              <div class="meta"><strong>Release Notes</strong>
                <div style="white-space:pre-wrap" class="muted">{{ details.notes }}</div>
              </div>
            </div>
          {% endif %}

          <div class="card" style="margin-top:16px;">
            <div class="meta">
              <div style="display:flex;align-items:center;justify-content:space-between;gap:8px">
                <strong>Discogs Status</strong>
              </div>
              <div style="margin-top:8px;display:flex;gap:8px;flex-wrap:wrap">
                {% if details.in_collection %}
                  <span class="muted" style="border:1px solid #2a2b2f;border-radius:8px;padding:4px 10px;background:rgba(103,232,249,.1)">In Collection</span>
                {% else %}
                  <form method="post" action="/release/save" style="margin:0">
                    <input type="hidden" name="_token" value="{{ csrf_token }}" />
                    <input type="hidden" name="release_id" value="{{ release.id }}" />
                    <input type="hidden" name="action" value="want_to_collection" />
                    <input type="hidden" name="return" value="{{ back_url|default('/') }}" />
                    <button type="submit" style="background:var(--card);color:var(--accent);border:1px solid #2a2b2f;border-radius:8px;padding:6px 10px;cursor:pointer">Add to Collection</button>
                  </form>
                {% endif %}

                {% if details.in_wantlist %}
                  <span class="muted" style="border:1px solid #2a2b2f;border-radius:8px;padding:4px 10px;background:rgba(255,255,255,.05)">In Wantlist</span>
                  <form method="post" action="/release/save" style="margin:0">
                    <input type="hidden" name="_token" value="{{ csrf_token }}" />
                    <input type="hidden" name="release_id" value="{{ release.id }}" />
                    <input type="hidden" name="action" value="remove_want" />
                    <input type="hidden" name="return" value="{{ back_url|default('/') }}" />
                    <button type="submit" class="muted" style="background:transparent;border:1px solid #2a2b2f;border-radius:8px;padding:6px 10px;cursor:pointer;color:inherit">Remove from Wantlist</button>
                  </form>
                {% elseif not details.in_collection %}
                  <form method="post" action="/release/save" style="margin:0">
                    <input type="hidden" name="_token" value="{{ csrf_token }}" />
                    <input type="hidden" name="release_id" value="{{ release.id }}" />
                    <input type="hidden" name="action" value="add_want" />
                    <input type="hidden" name="return" value="{{ back_url|default('/') }}" />
                    <button type="submit" class="muted" style="background:transparent;border:1px solid #2a2b2f;border-radius:8px;padding:6px 10px;cursor:pointer;color:inherit">Add to Wantlist</button>
                  </form>
                {% endif %}
              </div>
              <p class="muted" style="margin:8px 0 0 0;font-size:.85rem">Actions are queued and will be synced to Discogs in the background.</p>
            </div>
          </div>

          <div class="card" style="margin-top:16px;">
            <div class="meta">
              <div style="display:flex;align-items:center;justify-content:space-between;gap:8px">
                <strong>My Notes</strong>
                {% if not static_export and details.in_collection %}
                  <button id="editToggle" type="button" title="Edit" style="background:transparent;color:var(--text);border:1px solid #2a2b2f;border-radius:8px;padding:4px 8px;cursor:pointer;font-size:.9rem">Edit</button>
                {% endif %}
              </div>

              {% if saved %}
                <div class="muted" style="margin-top:6px">Status: {{ saved }}</div>
              {% endif %}

              <div id="notesView" style="margin-top:8px">
                {% if details.user_rating is not null %}
                  <div class="muted" style="margin-bottom:6px">Rating: {{ details.user_rating }}/5</div>
                {% endif %}
                {% if details.user_media_condition %}
                  <div class="muted" style="margin-bottom:6px">Media Condition: {{ details.user_media_condition }}</div>
                {% endif %}
                {% if details.user_sleeve_condition %}
                  <div class="muted" style="margin-bottom:6px">Sleeve Condition: {{ details.user_sleeve_condition }}</div>
                {% endif %}
                {% if details.user_notes %}
                  <div style="white-space:pre-wrap" class="muted">{{ details.user_notes }}</div>
                {% elseif details.in_collection %}
                  <div class="muted">(none)</div>
                {% endif %}
              </div>

              {% if not static_export and details.in_collection %}
                <form id="notesForm" method="post" action="/release/save" style="display:none; margin-top:8px; flex-direction:column; gap:8px">
                  <input type="hidden" name="_token" value="{{ csrf_token }}" />
                  <input type="hidden" name="release_id" value="{{ release.id }}" />
                  <input type="hidden" name="action" value="update_collection" />
                  <input type="hidden" name="return" value="{{ back_url|default('/') }}" />
                  <label>Rating
                    <select name="rating" style="background:var(--card);color:var(--text);border:1px solid #2a2b2f;border-radius:8px;padding:6px 8px">
                      <option value="">—</option>
                      {% for r in [0,1,2,3,4,5] %}
                        <option value="{{ r }}" {% if details.user_rating is not null and details.user_rating == r %}selected{% endif %}>{{ r }}/5</option>
                      {% endfor %}
                    </select>
                  </label>
                  <label>Media Condition
                    <select name="media_condition" style="background:var(--card);color:var(--text);border:1px solid #2a2b2f;border-radius:8px;padding:6px 8px">
                      <option value="">—</option>
                      {% for opt in ['Mint (M)', 'Near Mint (NM or M-)', 'Very Good Plus (VG+)', 'Very Good (VG)', 'Good Plus (G+)', 'Good (G)', 'Fair (F)', 'Poor (P)'] %}
                        <option value="{{ opt }}" {% if details.user_media_condition == opt %}selected{% endif %}>{{ opt }}</option>
                      {% endfor %}
                    </select>
                  </label>
                  <label>Sleeve Condition
                    <select name="sleeve_condition" style="background:var(--card);color:var(--text);border:1px solid #2a2b2f;border-radius:8px;padding:6px 8px">
                      <option value="">—</option>
                      {% for opt in ['Mint (M)', 'Near Mint (NM or M-)', 'Very Good Plus (VG+)', 'Very Good (VG)', 'Good Plus (G+)', 'Good (G)', 'Fair (F)', 'Poor (P)', 'Generic', 'No Cover'] %}
                        <option value="{{ opt }}" {% if details.user_sleeve_condition == opt %}selected{% endif %}>{{ opt }}</option>
                      {% endfor %}
                    </select>
                  </label>
                  <label>Notes
                    <textarea name="notes" rows="4" style="width:100%;background:var(--card);color:var(--text);border:1px solid #2a2b2f;border-radius:8px;padding:8px">{{ details.user_notes }}</textarea>
                  </label>
                  <div>
                    <button type="submit" style="background:var(--card);color:var(--text);border:1px solid #2a2b2f;border-radius:8px;padding:8px 12px;cursor:pointer">Save to Discogs</button>
                    <span class="muted" style="margin-left:8px">This queues a background job. Run <code>php bin/console sync:push</code> to process.</span>
                  </div>
                  <p class="muted" style="margin:6px 0 0 0; font-size:.9rem">Note: your rating and notes are stored on your personal Discogs collection entry for this release. They do not appear on the public release page.</p>
                </form>

                <script>
                  (function(){
                    const btn = document.getElementById('editToggle');
                    const form = document.getElementById('notesForm');
                    const view = document.getElementById('notesView');
                    if (!btn || !form || !view) return;
                    function setOpen(open){
                      form.style.display = open ? 'flex' : 'none';
                      view.style.display = open ? 'none' : 'block';
                      btn.textContent = open ? 'Cancel' : 'Edit';
                    }
                    btn.addEventListener('click', function(){
                      const open = form.style.display === 'none';
                      setOpen(open);
                    });
                    // If page loaded with ?edit=1, open form
                    const q = new URLSearchParams(window.location.search);
                    if (q.get('edit') === '1') setOpen(true);
                  })();
                </script>
              {% endif %}
            </div>
          </div>

          {% if details.extraartists %}
            <div class="card" style="margin-top:16px;">
              <div class="meta"><strong>Credits</strong>
                <ul>
                  {% for a in details.extraartists %}
                    <li>
                      {{ a.name|strip_discogs_suffix }}
                      {% if a.role %}<span class="muted">— {{ a.role }}</span>{% endif %}
                      {% if a.tracks %}<span class="muted"> (tracks: {{ a.tracks }})</span>{% endif %}
                    </li>
                  {% endfor %}
                </ul>
              </div>
            </div>
          {% endif %}

          {% if details.companies %}
            <div class="card" style="margin-top:16px;">
              <div class="meta"><strong>Companies</strong>
                <ul>
                  {% for c in details.companies %}
                    <li>
                      {{ c.name|strip_discogs_suffix }}
                      {% if c.entity_type_name %}<span class="muted"> — {{ c.entity_type_name }}</span>{% endif %}
                      {% if c.role %}<span class="muted"> ({{ c.role }})</span>{% endif %}
                    </li>
                  {% endfor %}
                </ul>
              </div>
            </div>
          {% endif %}

          {% if details.barcodes is defined and details.barcodes %}
            <div class="card" style="margin-top:16px;">
              <div class="meta"><strong>Barcodes</strong>
                <ul>
                  {% for b in details.barcodes %}
                    <li>{{ b.value }}{% if b.description %} <span class="muted">({{ b.description }})</span>{% endif %}</li>
                  {% endfor %}
                </ul>
              </div>
            </div>
          {% endif %}

          {% if details.other_identifiers is defined and details.other_identifiers %}
            <div class="card" style="margin-top:16px;">
              <div class="meta"><strong>Identifiers</strong>
                <ul>
                  {% for idf in details.other_identifiers %}
                    <li>{{ idf.type }}: {{ idf.value }}{% if idf.description %} <span class="muted">({{ idf.description }})</span>{% endif %}</li>
                  {% endfor %}
                </ul>
              </div>
            </div>
          {% endif %}
        </div>
      </div>

      {% if images is defined and images|length > 0 %}
      <!-- Lightbox overlay -->
      <div id="lightbox" class="lightbox" aria-hidden="true" role="dialog">
        <div class="lb-inner">
          <button class="lb-close" aria-label="Close">✕</button>
          <button class="lb-prev" aria-label="Previous">◀</button>
          <img class="lb-img" src="" alt="Full-size image" />
          <button class="lb-next" aria-label="Next">▶</button>
          <div class="lb-counter">1 / {{ images|length }}</div>
        </div>
      </div>

      <script>
        document.addEventListener('DOMContentLoaded', function(){
          const images = [
            {% for img in images %}'{{ img.url|e('js') }}'{% if not loop.last %}, {% endif %}{% endfor %}
          ];
          const main = document.getElementById('main-cover');
          const thumbs = document.querySelectorAll('.thumb');
          const lb = document.getElementById('lightbox');
          const lbImg = lb ? lb.querySelector('.lb-img') : null;
          const lbClose = lb ? lb.querySelector('.lb-close') : null;
          const lbPrev = lb ? lb.querySelector('.lb-prev') : null;
          const lbNext = lb ? lb.querySelector('.lb-next') : null;
          const lbCounter = lb ? lb.querySelector('.lb-counter') : null;
          let idx = parseInt(main?.getAttribute('data-idx') || '0', 10) || 0;

          function updateMain(to){
            if (!main) return;
            const i = Math.max(0, Math.min(images.length - 1, to));
            if (images[i] && main.getAttribute('src') !== images[i]) {
              main.setAttribute('src', images[i]);
            }
            main.setAttribute('data-idx', String(i));
            idx = i;
          }

          function openLightbox(startIdx){
            if (!lb || !lbImg) return;
            idx = Math.max(0, Math.min(images.length - 1, startIdx));
            lbImg.src = images[idx];
            if (lbCounter) lbCounter.textContent = (idx + 1) + ' / ' + images.length;
            lb.classList.add('open');
            lb.setAttribute('aria-hidden', 'false');
            document.body.style.overflow = 'hidden';
          }
          function closeLightbox(){
            if (!lb) return;
            lb.classList.remove('open');
            lb.setAttribute('aria-hidden', 'true');
            document.body.style.overflow = '';
          }
          function next(){ idx = (idx + 1) % images.length; if (lbImg){ lbImg.src = images[idx]; } if (lbCounter) lbCounter.textContent = (idx + 1) + ' / ' + images.length; }
          function prev(){ idx = (idx - 1 + images.length) % images.length; if (lbImg){ lbImg.src = images[idx]; } if (lbCounter) lbCounter.textContent = (idx + 1) + ' / ' + images.length; }

          // Thumbnail click: swap main and set index; Shift+Click opens lightbox
          thumbs.forEach(function(btn){
            btn.addEventListener('click', function(e){
              const i = parseInt(this.getAttribute('data-idx') || '0', 10) || 0;
              if (e.shiftKey) { openLightbox(i); return; }
              updateMain(i);
            });
          });

          // Main cover click: open lightbox on current index
          if (main) {
            main.addEventListener('click', function(){
              const i = parseInt(main.getAttribute('data-idx') || '0', 10) || 0;
              openLightbox(i);
            });
          }

          // Lightbox interactions
          lbClose?.addEventListener('click', closeLightbox);
          lbPrev?.addEventListener('click', prev);
          lbNext?.addEventListener('click', next);
          lbImg?.addEventListener('click', next); // click image to advance
          lb?.addEventListener('click', function(e){ if (e.target === lb) closeLightbox(); });

          // Keyboard support
          document.addEventListener('keydown', function(e){
            if (!lb || !lb.classList.contains('open')) return;
            if (e.key === 'Escape') { e.preventDefault(); closeLightbox(); }
            else if (e.key === 'ArrowRight') { e.preventDefault(); next(); }
            else if (e.key === 'ArrowLeft') { e.preventDefault(); prev(); }
          });

          // Ensure initial main index reflects the list
          if (images.length > 0 && main) {
            let initial = images.indexOf(main.getAttribute('src'));
            if (initial < 0) initial = 0;
            main.setAttribute('data-idx', String(initial));
          }
        });
      </script>
      {% endif %}
    {% else %}
      <p class="muted">Release not found.</p>
    {% endif %}
  </div>
{% endblock %}
