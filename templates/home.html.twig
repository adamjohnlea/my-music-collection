<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ title }}</title>
  <style>
    :root { --bg:#0b0b0c; --card:#16171a; --text:#e7e7ea; --muted:#a0a3aa; --accent:#67e8f9; }
    html,body{margin:0;padding:0;background:var(--bg);color:var(--text);font:16px/1.5 system-ui, -apple-system, Segoe UI, Roboto, Inter, sans-serif}
    .wrap{max-width:1200px;margin:40px auto;padding:0 20px}
    header{display:flex;align-items:center;justify-content:space-between;margin-bottom:24px}
    h1{font-size:1.5rem;margin:0}
    .grid{display:grid;grid-template-columns:repeat(auto-fill,minmax(160px,1fr));gap:16px}
    .card{background:var(--card);border-radius:12px;overflow:hidden}
    .cover{aspect-ratio:1/1;width:100%;object-fit:cover;background:#222}
    .meta{padding:10px}
    .title{font-weight:600}
    .artist{color:var(--muted);font-size:.9rem}
    .muted{color:var(--muted)}
    nav{display:flex;justify-content:center;gap:12px;margin-top:20px}
    a{color:var(--accent);text-decoration:none}
    a:hover{text-decoration:underline}
  </style>
</head>
<body>
  <div class="wrap">
    <header>
      <h1>{{ title }}</h1>
      <div class="muted">{{ total|default(0) }} items</div>
    </header>

    {% if items is not defined or items|length == 0 %}
      <p class="muted">No items to display. If you already ran the sync, try refreshing. Otherwise run: <code>php bin/console sync:initial</code>.</p>
    {% else %}
      <div class="grid">
        {% for it in items %}
          <a class="card" href="/release/{{ it.id }}" title="{{ it.title }} — {{ it.artist }}">
            {% if it.image %}
              <img class="cover" src="{{ it.image }}" alt="{{ it.title }} cover" loading="lazy" />
            {% else %}
              <div class="cover"></div>
            {% endif %}
            <div class="meta">
              <div class="title">{{ it.title }}</div>
              <div class="artist">{{ it.artist }}{% if it.year %} • {{ it.year }}{% endif %}</div>
            </div>
          </a>
        {% endfor %}
      </div>

      {% if total_pages is defined and total_pages > 1 %}
        <nav>
          {% set prev = page - 1 %}
          {% set next = page + 1 %}
          {% if page > 1 %}<a href="/?page={{ prev }}&per_page={{ per_page }}">← Prev</a>{% endif %}
          <span class="muted">Page {{ page }} / {{ total_pages }}</span>
          {% if page < total_pages %}<a href="/?page={{ next }}&per_page={{ per_page }}">Next →</a>{% endif %}
        </nav>
      {% endif %}
    {% endif %}
  </div>
</body>
</html>
